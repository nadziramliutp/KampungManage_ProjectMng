@page "/"
<PageTitle>Home</PageTitle>

<!-- Main Content Section with Container -->
<div class="container">
    <!-- Header Section: Main Title and Welcome -->
    <header class="main-header">
        <h1>Kampung Manage: Project Management Website</h1>
        <h2>Welcome to Kampung Manage, your go-to solution for seamless project management. We're thrilled to have you on board!</h2>
    </header>

    <!-- Steps to Get Started Section -->
    <div class="steps">
        <h3>Get Started in 3 Simple Steps</h3>
        <ol>
            <li>
                <strong>Create a Project</strong>
                <ul>
                    <li>Set up your first project in minutes.</li>
                    <li>Name it, set deadlines, and start adding tasks!</li>
                </ul>
                <!-- Create Project Button -->
                <a href="/Project" class="action-button">Create Project</a>
            </li>
            <li>
                <strong>Add your Team</strong>
                <ul>
                    <li>Add team members to assign them tasks.</li>
                </ul>
                <!-- Add Team Button -->
                <a href="/Team" class="action-button">Add Team</a>
            </li>
            <li>
                <strong>Track your Progress</strong>
                <ul>
                    <li>Monitor your project's progress by tracking completed tasks.</li>
                </ul>
                <!-- Track Project Button -->
                <a href="/dashboard" class="action-button">Track Your Project</a>
            </li>
        </ol>
    </div>
</div>
